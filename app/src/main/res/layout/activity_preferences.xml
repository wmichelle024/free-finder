<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.michellewong.freebiefinder_attempt4.PreferencesActivity">

    <TextView
        android:id="@+id/username_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="125dp"
        android:text="@string/emptyString"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="20sp"
        android:layout_alignBottom="@+id/welcome_txt"
        android:layout_alignTop="@+id/welcome_txt"
        />

    <TextView
        android:id="@+id/welcome_txt"
        android:layout_width="90dp"
        android:layout_height="28dp"
        android:layout_marginTop="21dp"
        android:layout_x="17dp"
        android:layout_y="28dp"
        android:text="Welcome,"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_marginLeft="27dp"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Interest_question_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="What are you interested in?"
        android:textSize="18sp"
        android:layout_below="@+id/username_txt"
        android:layout_alignLeft="@+id/welcome_txt"
        android:layout_alignStart="@+id/welcome_txt" />

    <CheckBox
        android:id="@+id/cbArt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Interest_question_txt"
        android:layout_alignStart="@+id/Interest_question_txt"
        android:layout_below="@+id/Interest_question_txt"
        android:layout_marginTop="28dp"
        android:text="Art" />

    <CheckBox
        android:id="@+id/cbBusiness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Business"
        android:layout_below="@+id/cbArt"
        android:layout_alignLeft="@+id/cbArt"
        android:layout_alignStart="@+id/cbArt" />

    <CheckBox
        android:id="@+id/cbFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:text="Food"
        android:layout_below="@+id/cbBusiness"
        android:layout_alignLeft="@+id/cbBusiness"
        android:layout_alignStart="@+id/cbBusiness" />

    <CheckBox
        android:id="@+id/cbGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cbFood"
        android:layout_alignStart="@+id/cbFood"
        android:layout_below="@+id/cbFood"
        android:layout_marginTop="17dp"
        android:text="Games" />

    <CheckBox
        android:id="@+id/cbHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/cbGame"
        android:layout_alignStart="@+id/cbGame"
        android:layout_below="@+id/cbGame"
        android:layout_marginTop="16dp"
        android:text="Health" />

    <CheckBox
        android:id="@+id/cbSocial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Social"
        android:layout_alignBaseline="@+id/cbArt"
        android:layout_alignBottom="@+id/cbArt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

    <CheckBox
        android:id="@+id/cbSports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbFood"
        android:layout_alignLeft="@+id/cbSocial"
        android:layout_alignStart="@+id/cbSocial"
        android:text="Sports" />

    <CheckBox
        android:id="@+id/cbTech"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cbGame"
        android:layout_alignLeft="@+id/cbSports"
        android:layout_alignStart="@+id/cbSports"
        android:text="Tech" />

    <CheckBox
        android:id="@+id/cbOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/cbGame"
        android:layout_alignLeft="@+id/cbTech"
        android:layout_alignStart="@+id/cbTech"
        android:text="Other" />

    <Button
        android:id="@+id/Bcomplete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="Complete"
        android:layout_marginBottom="26dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/cbOther"
        android:layout_alignEnd="@+id/cbOther" />

</RelativeLayout>
